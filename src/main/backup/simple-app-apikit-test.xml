				<http:headers><![CDATA[#[output application/java
---
{
	"Accept" : "application/json"
}]]]></http:headers>
				<http:response-validator>
					<http:success-status-code-validator
						values="405" />
				</http:response-validator>
			</http:request>
		</munit:execution>
		<munit:validation>
			<munit-tools:assert-that expression="#[attributes.statusCode]"
				is="#[MunitTools::equalTo(405)]" message="The HTTP Status code is not correct!"
				doc:name="Assert That Status Code is 405" />
		</munit:validation>
	</munit:test>
